<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="@dimen/dim_padding_10dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dim_padding_5dp"
        android:layout_weight="1"
        android:gravity="center"

        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/llViewIssues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dim_padding_20dp"
            android:layout_marginRight="@dimen/dim_padding_20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/btnViewIssues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dashboard_issues" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DashboardIssues"
            android:textColor="@color/colorWhite"/>

            </LinearLayout>


        <LinearLayout
            android:id="@+id/llViewRequests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dim_padding_20dp"
            android:layout_marginRight="@dimen/dim_padding_20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnViewRequests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dashboard_request" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/DashboardRequest"
                android:textColor="@color/colorWhite"/>

            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dim_padding_5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/llDocuments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dim_padding_20dp"
            android:layout_marginRight="@dimen/dim_padding_20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/btnDocuments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dashboard_document" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LeftPanelDocuments"
            android:textColor="@color/colorWhite"/>
            </LinearLayout>
        <LinearLayout
            android:id="@+id/llReports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dim_padding_20dp"
            android:layout_marginRight="@dimen/dim_padding_20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/btnReports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dashboard_reports" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LeftPanelReports"
            android:textColor="@color/colorWhite"/>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
