<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_add_issue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/container_toolbar">


        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dim_padding_15dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/dim_padding_10dp">
            <TextView
                android:id="@+id/tvShortDescriptionLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/ShortDescription"
                android:textColor="@color/colorButtonBG"
                android:textSize="@dimen/default_textsize_large"
                android:visibility="visible" />
            <EditText
                android:id="@+id/edtShortDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/ShortDescriptiontxt"
                android:layout_marginBottom="@dimen/dim_padding_10dp"
                android:layout_marginTop="@dimen/dim_padding_10dp"
                android:textSize="@dimen/default_textsize_large"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/colorWhite"
                android:maxLength="200"
                android:visibility="visible"
                android:textCursorDrawable="@drawable/cursor_color_white"/>

            <include layout="@layout/divider" />
            <TextView
                android:id="@+id/tvDescriptionLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/Description"
                android:textColor="@color/colorButtonBG"
                android:textSize="@dimen/default_textsize_large"
                android:visibility="visible" />
            <EditText
                android:id="@+id/edtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim_padding_10dp"
                android:layout_marginTop="@dimen/dim_padding_10dp"
                android:gravity="left|top"
                android:hint="@string/Descriptiontxt"
                android:minHeight="60dp"
                android:textSize="@dimen/default_textsize_large"
                android:visibility="visible"
                android:background="@null"
                android:textColorHint="@color/colorHint"
                android:maxLength="4000"
                android:textColor="@color/colorWhite"
                android:textCursorDrawable="@drawable/cursor_color_white"/>

            <include layout="@layout/divider" />

            <TextView
                android:id="@+id/tvSelectCategoryLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/SelectCategory"
                android:textColor="@color/colorButtonBG"
                android:textSize="@dimen/default_textsize_large"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvSelectCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:drawablePadding="@dimen/dim_padding_5dp"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:gravity="left"
                android:text="@string/LeftPanelCategory"
                android:textSize="@dimen/default_textsize_medium"
                android:textColor="@color/colorWhite"
                android:visibility="visible" />

            <include layout="@layout/divider" />

            <TextView
                android:id="@+id/tvSelectAffectedAreaLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/AffectedAreatxt"
                android:textColor="@color/colorButtonBG"
                android:textSize="@dimen/default_textsize_large"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvSelectAffectedArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:drawablePadding="@dimen/dim_padding_5dp"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:gravity="left"
                android:text="@string/AffectedAreatxt"
                android:textSize="@dimen/default_textsize_medium"
                android:textColor="@color/colorWhite"
                android:visibility="visible" />

            <include layout="@layout/divider" />
            <TextView
                android:id="@+id/tvUserLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/User"
                android:textColor="@color/colorButtonBG"
                android:textSize="@dimen/default_textsize_large"
                android:visibility="visible" />
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:hint="@string/Usertxt"
                android:textSize="@dimen/default_textsize_medium"
                android:enabled="false"
                android:textColor="@color/colorWhite"
                android:background="@null"/>

            <include layout="@layout/divider" />
            <TextView
                android:id="@+id/tvSelectIssueOpenDateLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/SelectIssueOpenDatetxt"
                android:textColor="@color/colorButtonBG"
                android:textSize="@dimen/default_textsize_large" />
            <TextView
                android:id="@+id/tvIssueOpenDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:hint="@string/IssueOpenDatetxt"
                android:textSize="@dimen/default_textsize_medium"
                android:textColor="@color/colorWhite"
                android:background="@null"/>

            <include layout="@layout/divider" />

            <TextView
                android:id="@+id/tvTicketStatusLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/TicketStatus"
                android:textColor="@color/colorButtonBG"
                android:textSize="@dimen/default_textsize_large"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvTicketStatusValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:drawablePadding="@dimen/dim_padding_5dp"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:gravity="left"
                android:text="@string/TicketStatustxt"
                android:textSize="@dimen/default_textsize_medium"
                android:textColor="@color/colorWhite"
                android:visibility="visible" />

            <include layout="@layout/divider" />
            <TextView
                android:id="@+id/tvAssignedToLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/AssignedTo"
                android:textColor="@color/colorButtonBG"
                android:textSize="@dimen/default_textsize_large"
                android:visibility="visible" />
            <TextView
                android:id="@+id/tvAssignedTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/AssignedTotxt"
                android:textSize="@dimen/default_textsize_medium"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:textColor="@color/colorWhite"
                android:background="@null"/>

            <include layout="@layout/divider" />

            <LinearLayout
                android:id="@+id/layoutBtns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/dim_padding_20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSubmitTicket"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dim_padding_10dp"
                    android:layout_weight="1"
                    android:text="@string/SubmitTicketBtn"></Button>

                <Button
                    android:id="@+id/btnEmail"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_padding_10dp"
                    android:layout_weight="1"
                    android:text="@string/EmailBtn"></Button>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
